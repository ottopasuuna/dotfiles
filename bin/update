echo 'Updating mirror list'
sudo reflector --verbose --country 'Canada' -f 10 -p http --sort score --save /etc/pacman.d/mirrorlist
echo 'Backing up package list'
sudo aura -B
echo 'Removing all orphan packages'
sudo aura -Oj
echo 'cleaning cache of uninstalled packages'
paccache -ruk0
echo 'Updating packages'
sudo aura -Syu
sudo aura -Ayux
echo 'Optimizing database'
sudo pacman-optimize


